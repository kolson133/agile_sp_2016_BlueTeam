<!DOCTYPE html>
<html>
<head>
  <title>Flashcards</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag "http://latex.codecogs.com/css/equation-embed.css" %>
  <%= javascript_include_tag "http://latex.codecogs.com/js/eq_config.js" %>
  <%= javascript_include_tag "http://latex.codecogs.com/eqneditor/js/eq_editor-lite-18.js" %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
<%= link_to 'Home', root_path, :id => "navLink" %>  |&nbsp
<%= link_to 'Decks', decks_url, :id => "navLink" %> |&nbsp
<%= link_to 'Shared', shared_decks_path, :id => "navLink" %>
  <% if user_signed_in? %>
    <p>Logged in as: <%= current_user.name %>.</p>
  <% else %>
    <div class="social-wrap">
      <%=link_to '<i class="fa fa-twitter fa-fw"></i>Sign in with Twitter'.html_safe, user_omniauth_authorize_path(:twitter), :id => "twitter" %>
      <%=link_to '<i class="fa fa-facebook fa-fw"></i>Sign in with Facebook'.html_safe, user_omniauth_authorize_path(:facebook), :id => "facebook" %>
      <%=link_to '<i class="fa fa-google fa-fw"></i>Sign in with Google'.html_safe, user_omniauth_authorize_path(:google_oauth2), :id => "googleplus" %>
    </div>
  <% end %>
<%= yield %>
</body>
</html>
