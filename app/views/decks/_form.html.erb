<%= form_for(@deck) do |f| %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :category %><br>
    <%= f.text_field :category %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="control">
    <%= f.label "Change Background Color", class: 'control-label' %>
  </div>
  <div class="controls">
    <%= f.select(:color_type, options_for_select([['None', ''], ['Lime', '#00ff00'], ['Teal', '#00FFFF'], ['Purple', '#CC0099'], ['Orange', '#ff8c1a']])) %>
  </div>
  <div class="control">
    <%= f.label "Change Font Style", class: 'control-label' %>
  </div>
  <div class="controls">
    <%= f.select(:font_type, options_for_select([['None', ''], ['Bold', 'bold'], ['Italic', 'italic'], ['Small Caps', 'small-caps'], ['Oblique', 'oblique']])) %>
  </div>
    <div class="control">
    <%= f.label "Change Foreground", class: 'control-label' %>
  </div>
  <div class="controls">
    <%= f.select(:foreground_color, options_for_select([['None', ''], ['Navy', 'navy'], ['Maroon', 'maroon'], ['White', 'white'], ['Orange', '#ff8c1a']])) %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit :id =>"update-button"%> <%= link_to 'Cancel', @deck, :id => "deleteLink" %>
  </div>
<% end %>
