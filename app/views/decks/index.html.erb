<p id="notice"><%= notice %></p>
<h1>Listing Decks</h1>
<%= link_to 'Create new deck', new_deck_path, :id => "editCreateLink" %><br>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Category</th>
      <th>Description</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @decks.each do |deck| %>
      <tr>
        <td><%= link_to deck.title, deck, :id => "deckCardLinks" %>&nbsp</td>
        <td><%= deck.author %>&nbsp&nbsp&nbsp</td>
        <td><%= deck.category %>&nbsp&nbsp&nbsp</td>
        <td><%= deck.description %>&nbsp&nbsp&nbsp</td>
        <td><%= link_to 'Edit', edit_deck_path(deck), :id => "editCreateLink" %> &nbsp</td> 
        <% unless deck.slug.present? or !user_signed_in? %>
          <td><%= link_to 'Share', share_deck_path(deck), :method => :patch, :id => 'editCreateLink' %> &nbsp</td>
        <% end %>
        <td><%= link_to 'Delete', deck, method: :delete, data: { confirm: 'Are you sure that you want to delete this deck?' }, :id => "deleteLink" %></td>
      </tr>
    <% end %>
  </tbody>
</table><br>
