<p id="notice"><%= notice %></p>
<center>
  <%= link_to "Back to Deck", deck_path(@deck.id), :id => "navLink" %> |&nbsp
  <%= link_to 'All Decks', decks_url, :id => "navLink" %> |&nbsp
  <%= link_to 'New Card', new_deck_card_path(@deck), :id => "navLink" %> |&nbsp
  <%= link_to 'Edit Deck', edit_deck_path(@deck), :id => "navLink" %>
</center><br>

<div class="card">

  <% unless @deck.cards.first == @card or (@deck.cards.first.is_disabled == true and @card.previous == @deck.cards.first) %>
    <%= link_to "", previous_card_path, :method => :post, :class => "arrow-left" %>
  <% end %>

  <% unless @deck.cards.last == @card or (@deck.cards.last.is_disabled == true and @card.next == @deck.cards.last)%>
    <%= link_to "", next_card_path, :method => :post, :class => "arrow-right" %>
  <% end %>

  <% if @card.image.exists? %>
    <%= image_tag @card.image.url(:medium), :class => "card-front" %>
  <% else %> 
    <p class="card-front"><%= @card.question %></p>
  <% end %>

  <p class="card-back">
    <%= @card.answer %>
  </p>
  
</div>

