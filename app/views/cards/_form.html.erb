<%= javascript_include_tag "math_equations.js" %>
<%= form_for([@deck, @card]) do |f| %>
  <a href="#" id="eqed">Load advanced equation editor...</a>
  <a href="#" hidden id="eqed_clicked">Cancel advanced equation editor...</a>
  <div hidden id="editor"></div>
  <textarea hidden id="entry" name="card[raw_latex]" class="textarea"></textarea>
  <p id="advanced_eq_question" hidden>Advanced Equation Question:<br><img id="equation1"/></p>
  <div class="image" id="image_field">
    <p>Upload a photo: <%= f.file_field :image %></p>
    <p>Provide a URL: <%= f.text_field :image_remote_url %></p>
  </div>
  <div class="field" id="question_field">
    <%= f.label :question %><br>
    <%= f.text_area :question, :id => "text_box" %>
  </div>
  <div class="field" id="answer_field">
    <%= f.label :answer %><br>
    <%= f.text_area :answer, :id => "text_box" %>
  </div>
  <div class="field">
    <%= f.label :is_disabled, "Disable Card" %>
    <%= f.check_box :is_disabled %><br>
  </div>
  <div class="actions">
    <%= f.submit :id =>"update-button"%> <%= link_to 'Cancel', @deck, :id => "deleteLink" %>
  </div>
<% end %>
